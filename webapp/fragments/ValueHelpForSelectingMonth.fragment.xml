<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover placement="Vertical" showHeader="false" width="200%" class="popoverClassMonth">
			<customHeader>
			<Toolbar >
				<ToolbarSpacer/>
				<Title text="Select a Month"/>
				<ToolbarSpacer/>
			</Toolbar>
		</customHeader>
		<VBox>
			<FlexBox alignItems="Center" justifyContent="Center">
				<items>
					<Button text="January" press="handleMonthSelect" width="4.8rem" type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
					<Button text="February" press="handleMonthSelect" width="4.8rem" type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
					<Button text="March" press="handleMonthSelect"  width="4.8rem"  type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
				</items>
			</FlexBox>
			<FlexBox alignItems="Center" justifyContent="Center">
				<items>
					<Button text="April" press="handleMonthSelect"  width="4.8rem" type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
					<Button text="May" press="handleMonthSelect"  width="4.8rem" type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
					<Button text="June" press="handleMonthSelect"  width="4.8rem" type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
				</items>
			</FlexBox>
			<FlexBox alignItems="Center" justifyContent="Center">
				<items>
					<Button text="July" press="handleMonthSelect"  width="4.8rem" type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
					<Button text="August" press="handleMonthSelect"  width="4.8rem" type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
					<Button text="September" press="handleMonthSelect"  width="4.8rem" type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
				</items>
			</FlexBox>
			<FlexBox alignItems="Center" justifyContent="Center">
				<items>
					<Button text="October" press="handleMonthSelect"  width="4.8rem" type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
					<Button text="November" press="handleMonthSelect"  width="4.8rem" type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
					<Button text="December" press="handleMonthSelect"  width="4.8rem" type="Transparent" class="sapUiTinyMarginBottom popOverItem menuButton"/>
				</items>
			</FlexBox>
		</VBox>
	</Popover>
</core:FragmentDefinition>

